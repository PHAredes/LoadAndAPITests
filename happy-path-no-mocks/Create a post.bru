meta {
  name: Create a post
  type: http
  seq: 1
}

post {
  url: https://dev.codeleap.co.uk/careers/
  body: json
  auth: none
}

body:json {
  {
    "username": "User",
    "title": "User",
    "content": "User"  
  }
}

vars:post-response {
  last_post_id: res.body.id
}

assert {
  res.status: eq 200
  res.body: isJson
  res.body.id: isNumber
  res.body.username: matches
  res.body.title: matches User
  res.body.content: matches User
}
